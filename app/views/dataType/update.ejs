<% include ../partials/header %>

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a  href="/datatype/list">Datos Soportados</a>
    </li>
    <li class="breadcrumb-item active">Actualizar</li>
  </ol>

  <%if(typeof dataType != 'undefined'){%>
    <div class="card mb-3">
      <div class="card-header">
        <div class="d-inline">
           <span class="text-primary"> ID: </span> <span class="text-secondary"> <%=dataType.id%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Nombre: </span>  <span class="text-secondary"> <%=dataType.name%> </span>
        </div>
      </div>
      <div class="card-body">
        <form action="/datatype/update" method="POST">
          <input type="number" name="id" value="<%=dataType.id%>" hidden>

          <div class="form-row">
            <div class="form-group col-md-3">
            <label for="name"><b>Nombre</b></label>
              <input type="text" class="form-control"  id="name" name="name"
              value="<%=dataType.name%>">
            </div>
            <div class="form-group col-md-3">
              <label for="device"><b>Dispositivo</b></label>
              <select class="form-control" id="device" name="device" required>
                <option value="">Seleccione un Dispositivo</option>
                <% devices.forEach(({id, name}) => { %>
                <option value="<%=id%>"
                  <%if(dataType.Device.id == id){%> selected <%}%>>
                  <%=name%>
                </option>
                <% }) %>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-3">
              <label for="identifier"><b>Identificador</b></label>
              <input type="text" class="form-control" id="identifier" name="identifier"
              value="<%=dataType.identifier%>">
            </div>

            <div class="form-group col-md-3">
              <label for="supported"><b>Soportado</b></label>
              <select class="form-control" id="supported" name="supported">
                <option value=""> </option>
                <option <%if(dataType.supported == 1){%> selected <%}%> value="1"> Si </option>
                <option <%if(dataType.supported == 0){%> selected <%}%> value="0"> No </option>
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
      </div>
    </div>
   <%}%>

<% include ../partials/footer %>