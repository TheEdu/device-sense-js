<% include ../partials/header %>

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a  href="/datastore/list">Bases de Datos</a>
    </li>
    <li class="breadcrumb-item active">Actualizar</li>
  </ol>

  <%if(typeof dataStore != 'undefined'){%>
    <div class="card mb-3">
      <div class="card-header">
        <div class="d-inline">
           <span class="text-primary"> UUID: </span> <span class="text-secondary"> <%=dataStore.uuid%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Identificador: </span>  <span class="text-secondary"> <%=dataStore.name%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Tipo: </span>  <span class="text-secondary"> <%=dataStore.type%> </span>
        </div>

        <div class="d-inline ml-2">
           <span class="text-primary"> Protocolo: </span>  <span class="text-secondary"> <%=dataStore.protocol%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Host: </span>  <span class="text-secondary"> <%=dataStore.host%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Puerto: </span>  <span class="text-secondary"> <%=dataStore.port%> </span>
        </div>
        <div class="d-inline ml-2">
           <span class="text-primary"> Base de Datos: </span>  <span class="text-secondary"> <%=dataStore.database%> </span>
        </div>
      </div>
      <div class="card-body">
        <form action="/datastore/update" method="POST">
          <input type="number" name="id" value="<%=dataStore.id%>" hidden>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="username"><b>Usuario</b></label>
              <input type="text" class="form-control" id="username" name="username"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['username']%>"
                      <%} else {%>
                        "<%=dataStore.username%>"
                      <%}%> >
            </div>
            <div class="form-group col-md-6">
              <label for="password"><b>Contrase침a</b></label>
              <input type="text" class="form-control" id="password" name="password"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['password']%>"
                      <%} else {%>
                        "<%=dataStore.password%>"
                      <%}%> >
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-3">
              <label for="failoverTimeout"><b>Tiempo de Espera por Fallo</b></label>
              <input type="text" class="form-control" id="failoverTimeout" name="failoverTimeout" placeholder="10000ms (Default)"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['failoverTimeout']%>"
                      <%} else {%>
                        "<%=dataStore.failoverTimeout%>"
                      <%}%> >

            </div>

            <div class="form-group col-md-3">
              <label for="bufferMaxSize"><b>M치ximo tama침o de Buffer</b></label>
              <input type="text" class="form-control" id="bufferMaxSize" name="bufferMaxSize" placeholder="64MB (Default)"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['bufferMaxSize']%>"
                      <%} else {%>
                        "<%=dataStore.bufferMaxSize%>"
                      <%}%> >
            </div>

            <div class="form-group col-md-3">
              <label for="writeInterval"><b>Intervalo de Escritura</b></label>
              <input type="text" class="form-control" id="writeInterval" name="writeInterval" placeholder="3000ms (Default)"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['writeInterval']%>"
                      <%} else {%>
                        "<%=dataStore.writeInterval%>"
                      <%}%> >

            </div>

            <div class="form-group col-md-3">
              <label for="timeOut"><b>Puntos por Intervalo</b></label>
              <input type="text" class="form-control" id="writeMaxPoints" name="writeMaxPoints" placeholder="1000 (Default)"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['writeMaxPoints']%>"
                      <%} else {%>
                        "<%=dataStore.writeMaxPoints%>"
                      <%}%> >
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
            <label for="description"><b>Descripci칩n</b></label>
              <input type="text" class="form-control"  id="description" name="description"
              value=  <%if(typeof params != 'undefined'){%> 
                        "<%=params['description']%>"
                      <%} else {%>
                        "<%=dataStore.description%>"
                      <%}%> >
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
      </div>
    </div>
   <%}%>

<% include ../partials/footer %>