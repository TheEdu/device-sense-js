<% include ../partials/header %>

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/device/list">Dispositivos</a>
    </li>
    <li class="breadcrumb-item active">Ver</li>
  </ol>

  <%if(typeof device != 'undefined'){%>
    <div class="card mb-3">
      <div class="card-body">
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="uuid"><b>UUID</b></label>
              <input type="text" class="form-control" id="endpointUrl" disabled
              value="<%=device.uuid%>">
            </div>
            <div class="form-group col-md-6">
              <label for="name"><b>Nombre</b></label>
              <input type="text" class="form-control" id="name" disabled
              value="<%=device.name%>">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="ipAdrress"><b>Administrador</b></label>
              <input type="text" class="form-control" id="endpointUrl" disabled
              value=<%if(typeof device.User != 'undefined'){%> 
                      "<%= device.User.firstName %> <%= device.User.lastName %>" 
                    <%}%>>
            </div>
            <div class="form-group col-md-3">
              <label for="rootNode"><b>Creado En</b></label>
              <input type="text" class="form-control" id="rootNode" disabled
              value="<%=`${device.createdAt.getDate()}/${device.createdAt.getMonth()+1}/${device.createdAt.getFullYear()}`%>">
            </div>
            <div class="form-group col-md-3">
              <label for="timeOut"><b>Actualizado En</b></label>
              <input type="text" class="form-control" id="timeOut" disabled
              value="<%=`${device.updatedAt.getDate()}/${device.updatedAt.getMonth()+1}/${device.updatedAt.getFullYear()}`%>">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="ipAdrress"><b>URL de Conexión</b></label>
              <input type="text" class="form-control" id="endpointUrl" disabled
              value="<%=device.endpointUrl%>">
            </div>
            <div class="form-group col-md-3">
              <label for="rootNode"><b>Nodo Raíz</b></label>
              <input type="text" class="form-control" id="rootNode" disabled
              value="<%=device.rootNode%>">
            </div>
            <div class="form-group col-md-3">
              <label for="timeOut"><b>Tiempo Límite</b></label>
              <input type="text" class="form-control" id="timeOut" disabled
              value="<%=device.timeOut%>">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
            <label for="description"><b>Descripción</b></label>
              <input type="text" class="form-control"  id="description" disabled
              value="<%=device.description%>">
            </div>
          </div>
        </form>
      </div>
    </div>
   <%}%>

<% include ../partials/footer %>